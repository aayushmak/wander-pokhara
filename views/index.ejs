    <ul class="flex items-center space-x-4">
      <div class="relative inline-block">
        <button class="text-white py-4 px-6 text-base font-semibold ">Categories</button>
        <div class="absolute hidden  bg-gray-200 min-w-[160px] shadow-md z-10">
          <a href="/category/unexplored"
            class="block text-black py-3 px-4 no-underline hover:bg-gray-300">Unexplored</a>
          <a href="/category/historical"
            class="block text-black py-3 px-4 no-underline hover:bg-gray-300">Historical</a>
          <a href="/category/cultural" class="block text-black py-3 px-4 no-underline hover:bg-gray-300">Cultural</a>
          <a href="/category/naturistic"
            class="block text-black py-3 px-4 no-underline hover:bg-gray-300">Naturistic</a>
          <a href="/category/popular" class="block text-black py-3 px-4 no-underline hover:bg-gray-300">Popular</a>
        </div>
      </div>
      <li><a href="/reviews" class="hover:underline hover:underline-offset-4">Review</a></li>
    </ul>
  </nav>

  <!-- Hero Section -->
  <div class="relative custom-height">
    <!-- Background Image -->
    <img src="https://www.trekkingtrail.com/uploads/img/dhampus-sarangkot-luxury-trek.jpg"
      alt="Dhampus Sarangkot Luxury Trek" class="w-full h-full object-cover" />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
    <!-- Content -->
    <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white z-10 space-y-4">
      <h1 class="text-5xl font-bold mt-24">Welcome to Wander Pokhara</h1>
      <p class="text-2xl animate-pulse font-semibold">Discover the beauty of Pokhara.</p>

      <div class="w-1/4 flex">
        <input type="search" id="default-search"
          class="rounded-l-lg block w-full p-4 text-sm h-[36px] text-gray-900 border border-gray-300focus:border-blue-500"
          placeholder="Where you want to travel?" required />
        <button type="submit"
          class="rounded-r-lg bg-blue-500 hover:bg-blue-700 text-white font-medium text-sm px-4 py-2 transition duration-300">Find</button>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <section class="py-14 bg-gray-100">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-8 font-serif text-black/80">Explore Our Features</h2>
      <div class="flex flex-wrap justify-center gap-8">
        <div
          class="w-full sm:w-1/2 lg:w-1/4 bg-white p-6 rounded-lg shadow-sm hover:shadow-xl transition-all duration-700">
          <h3 class="text-2xl font-semibold mb-2 font-serif text-black/80">Stunning Landscapes</h3>
          <p class="text-slate-500">Experience the breathtaking views of Pokhara's landscapes.</p>
        </div>
        <div
          class="w-full sm:w-1/2 lg:w-1/4 bg-white p-6 rounded-lg shadow-sm hover:shadow-xl transition-all duration-700">
          <h3 class="text-2xl font-semibold mb-2 font-serif text-black/80">Cultural Insights</h3>
          <p class="text-slate-500">Immerse yourself in the rich cultural heritage of Pokhara with our curated
            experiences.
          </p>
        </div>
        <div
          class="w-full sm:w-1/2 lg:w-1/4 bg-white p-6 rounded-lg shadow-sm hover:shadow-xl transition-all duration-700">
          <h3 class="text-2xl font-semibold mb-2 font-serif text-black/80">Best Experiences</h3>
          <p class="text-slate-500">Taste the flavors of Pokhara with our recommendations.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-6 text-white items-center ">
    <div class="container mx-auto px-4 text-center -mt-10">
      <h2 class="text-4xl font-bold mb-6 text-black mt-12 font-serif text-black/80">Our Impact</h2>
      <div class="flex flex-wrap justify-center gap-8">
        <div
          class="w-full hover:scale-105 transition-all hover:duration-700 sm:w-1/4 bg-green-500 p-6 rounded-lg shadow-lg">
          <h3 class="text-3xl  font-bold mb-2 font-serif text-black/80">500+</h3>
          <p class="font-medium">Recommended Places</p>
        </div>
        <div
          class="w-full hover:scale-105 transition-all hover:duration-700 sm:w-1/3 bg-blue-600 p-6 rounded-lg shadow-lg">
          <h3 class="text-3xl  font-bold mb-2 font-serif text-black/80">100+</h3>
          <p class="font-medium">Happy Visitors</p>
        </div>
        <div
          class="w-full hover:scale-105 transition-all hover:duration-700 sm:w-1/3 bg-green-500 p-6 rounded-lg shadow-lg">
          <h3 class="text-3xl font-bold mb-2 font-serif text-black/80">50+</h3>
          <p class="font-medium">Customer Satisfactions</p>
        </div>
      </div>
    </div>
  </section>

